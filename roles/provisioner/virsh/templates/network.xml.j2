<network>
  <name>{{ item.key }}</name>
    {% if item.value.forward is defined %}
        <forward mode="{{ item.value.forward.type }}" />
    {% endif %}
    <bridge name="{{ item.key }}" stp='on' delay='0'/>
    {% if item.value.ip_address is defined %}
  <ip address="{{ item.value.ip_address }}" netmask="{{ item.value.netmask }}">
    {% if item.value.dhcp is defined %}
        <dhcp>
            <range start="{{ item.value.dhcp.range.start }}" end="{{ item.value.dhcp.range.end }}"/>
        </dhcp>
    {% endif %}
  </ip>
    {% endif %}
    {% if item.value.ipv6_address is defined %}
    <ip family="ipv6" address="{{ item.value.ipv6_address }}" prefix="{{ item.value.ipv6_prefix }}" >
    {% if item.value.dhcpv6 is defined %}
        <dhcp>
            <range start="{{ item.value.dhcpv6.range.start }}" end="{{ item.value.dhcpv6.range.end }}"/>
        </dhcp>
    {% endif %}
    </ip>
    {% endif %}
</network>
